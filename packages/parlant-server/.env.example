# Parlant Server Configuration
# ============================

# Database Configuration (shared with Sim)
DATABASE_URL=postgresql://user:password@localhost:5432/sim_dev

# Server Configuration
PARLANT_HOST=localhost
PARLANT_PORT=8001
DEBUG=false

# AI Model Configuration
AI_PROVIDER=openai
AI_MODEL=gpt-4
OPENAI_API_KEY=your-openai-api-key-here

# Logging Configuration
LOG_LEVEL=INFO

# Sim Integration
SIM_API_URL=http://localhost:3000
SIM_API_KEY=your-sim-api-key-here

# Session Management
SESSION_TIMEOUT=3600
SESSION_STORAGE=postgresql

# Performance Tuning
MAX_CONCURRENT_SESSIONS=100
CACHE_TTL=300