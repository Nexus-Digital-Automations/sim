{
  "name": "parlant-server",
  "version": "1.0.0",
  "description": "Parlant Python server for Sim integration",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "start": "python server.py",
    "dev": "python server.py --reload",
    "install": "./install.sh",
    "activate": "source venv/bin/activate",
    "test": "node run-tests.js",
    "test:integration": "jest tests/integration/ --verbose",
    "test:database": "jest tests/database/ --verbose",
    "test:auth": "jest tests/auth/ --verbose",
    "test:health": "jest tests/health/ --verbose",
    "test:api": "jest tests/api/ --verbose",
    "test:performance": "jest tests/performance/ --verbose --testTimeout=180000",
    "test:python": "python -m pytest tests/",
    "test:js": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "python -m pylint server.py",
    "format": "python -m black .",
    "type-check": "python -c \"import py_compile; py_compile.compile('server.py', doraise=True); print('Type check passed')\"",
    "validate": "node validate-config.js development",
    "validate:staging": "node validate-config.js staging",
    "validate:production": "node validate-config.js production",
    "validate:example": "node validate-config.js example",
    "validate:python": "python validate-config.py development",
    "validate:python:all": "python validate-config.py development && python validate-config.py staging && python validate-config.py production",
    "health": "curl -f http://localhost:8001/health || echo 'Server not running'",
    "docker:build": "docker build -t sim-parlant-server .",
    "docker:run": "docker run -p 8001:8001 --env-file .env sim-parlant-server"
  },
  "keywords": [
    "parlant",
    "ai",
    "agents",
    "sim",
    "python",
    "fastapi"
  ],
  "author": "Sim Team",
  "license": "MIT",
  "engines": {
    "python": ">=3.8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sim/sim.git",
    "directory": "packages/parlant-server"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "axios": "^1.12.2",
    "dotenv": "^17.2.2",
    "jest": "^30.1.3",
    "jsonwebtoken": "^9.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "testTimeout": 30000,
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!run-tests.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "verbose": true
  }
}
