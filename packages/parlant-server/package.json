{
  "name": "parlant-server",
  "version": "1.0.0",
  "description": "Parlant Python server for Sim integration",
  "main": "server.py",
  "scripts": {
    "start": "python server.py",
    "dev": "python server.py --reload",
    "install": "./install.sh",
    "activate": "source venv/bin/activate",
    "test": "python -m pytest tests/",
    "lint": "python -m pylint server.py",
    "format": "python -m black .",
    "type-check": "python -m mypy server.py",
    "validate": "node validate-config.js development",
    "validate:staging": "node validate-config.js staging",
    "validate:production": "node validate-config.js production",
    "validate:example": "node validate-config.js example",
    "validate:python": "python validate-config.py development",
    "validate:python:all": "python validate-config.py development && python validate-config.py staging && python validate-config.py production",
    "health": "curl -f http://localhost:8001/health || echo 'Server not running'",
    "docker:build": "docker build -t sim-parlant-server .",
    "docker:run": "docker run -p 8001:8001 --env-file .env sim-parlant-server"
  },
  "keywords": [
    "parlant",
    "ai",
    "agents",
    "sim",
    "python",
    "fastapi"
  ],
  "author": "Sim Team",
  "license": "MIT",
  "engines": {
    "python": ">=3.8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sim/sim.git",
    "directory": "packages/parlant-server"
  }
}