{
  "name": "@sim/universal-tool-adapter",
  "version": "1.0.0",
  "description": "Universal Tool Adapter with Enhanced Intelligence",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:intelligence": "jest --testPathPattern=intelligence-testing-framework",
    "test:automated": "jest --testPathPattern=automated-testing-suite",
    "test:ux": "jest --testPathPattern=user-experience-testing",
    "test:integration": "jest --testPathPattern=integration-validation",
    "validate": "ts-node src/enhanced-intelligence/__tests__/run-validation.ts",
    "validate:acceptance": "ts-node src/enhanced-intelligence/__tests__/run-validation.ts acceptance-criteria",
    "validate:performance": "ts-node src/enhanced-intelligence/__tests__/run-validation.ts performance",
    "validate:security": "ts-node src/enhanced-intelligence/__tests__/run-validation.ts security",
    "validate:integration": "ts-node src/enhanced-intelligence/__tests__/run-validation.ts integration",
    "lint": "biome check --write .",
    "lint:check": "biome check .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@types/node": "^20.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.0.0",
    "@types/jest": "^29.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testTimeout": 30000
  },
  "files": [
    "dist/**/*"
  ]
}
