{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["es2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@sim/universal-tool-adapter": ["./src/index.ts"],
      "@sim/universal-tool-adapter/*": ["./src/*"],
      "@sim/db": ["../db/index.ts"],
      "@sim/db/*": ["../db/*"],
      "@sim/ts-sdk": ["../ts-sdk/src/index.ts"],
      "@sim/ts-sdk/*": ["../ts-sdk/src/*"],
      "@sim/cli": ["../cli/src/index.ts"],
      "@sim/cli/*": ["../cli/src/*"],
      "@sim/template-system": ["../template-system/src/index.ts"],
      "@sim/template-system/*": ["../template-system/src/*"]
    },
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
