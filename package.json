{
  "name": "simstudio",
  "packageManager": "bun@1.2.12",
  "version": "0.0.0",
  "private": true,
  "license": "Apache-2.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start": "turbo run dev",
    "dev:sockets": "cd apps/sim && bun run dev:sockets",
    "dev:full": "cd apps/sim && bun run dev:full",
    "test": "turbo run test --filter=@sim/template-system --filter=simstudio-ts-sdk --continue",
    "test:full": "turbo run test",
    "format": "bunx biome format --write .",
    "format:check": "bunx biome format .",
    "lint": "bunx biome check --write --unsafe .",
    "lint:check": "bunx biome check --unsafe .",
    "lint:helm": "helm lint ./helm/sim --strict --values ./helm/sim/test/values-lint.yaml",
    "lint:all": "bun run lint && bun run lint:helm",
    "check": "bunx biome check --files-ignore-unknown=true",
    "prepare": "bun husky",
    "prebuild": "echo 'Build process started - skipping linting for emergency build fix'",
    "type-check": "turbo run type-check",
    "typecheck": "turbo run type-check"
  },
  "overrides": {
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "next": "15.4.1",
    "@next/env": "15.4.1",
    "drizzle-orm": "0.44.5",
    "postgres": "3.4.7"
  },
  "dependencies": {
    "@linear/sdk": "60.0.0",
    "@t3-oss/env-nextjs": "0.13.8",
    "@vercel/analytics": "1.5.0",
    "bcryptjs": "3.0.2",
    "better-auth": "1.3.18",
    "cookie": "1.0.2",
    "drizzle-orm": "0.44.5",
    "esbuild": "0.25.10",
    "geist": "1.5.1",
    "jsondiffpatch": "0.7.3",
    "mongodb": "6.20.0",
    "parlant-chat-react": "1.0.10",
    "postgres": "3.4.7",
    "prismjs": "1.30.0",
    "react-colorful": "5.6.1",
    "remark-gfm": "4.0.1",
    "server-only": "0.0.1",
    "socket.io-client": "4.8.1",
    "twilio": "5.10.1",
    "xlsx": "0.18.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@next/env": "15.4.1",
    "@types/bcryptjs": "3.0.0",
    "drizzle-kit": "0.31.5",
    "husky": "9.1.7",
    "lint-staged": "16.2.1",
    "turbo": "2.5.8"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss}": [
      "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  }
}
